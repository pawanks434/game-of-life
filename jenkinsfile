pipeline {
    agent any
    trigger { pollSCM ('30 9 * * 2') }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/pawanks434/game-of-life.git',
                branch: 'pt'
            }
        }
        stage(package) {
                tools {
                    jdk 'JDK8_UBUNTU'
                }
                 steps {
                    sh  'mvn package'
                 }   
        }
    }  
}